<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <ul class="nav navbar-nav navbar-left">
      <%= link_to "Dat Private Club", root_path, id: "logo" %>
      <li><%= link_to "Accueil", root_path %></li>
    </ul>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "Accès au club", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Mon compte <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profil", current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Se déconnecter", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Se connecter", login_path %></li>
          <li><%= link_to "Nous rejoindre", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
